@model LocalityView

<div class="col">
    <div class="widget-box">
        <div class="widget-header">
            <span class="icon fa fa-th-list"></span>
            <h5>@Resource.ForHeader("Locality")</h5>
        </div>
        <div class="widget-content">
            <form asp-antiforgery="true">

                <div class="form-group">
                    <div class="control-label col-md-3 col-lg-2">
                        <label asp-for="Title"></label>
                    </div>
                    <div class="control-content col-md-9 col-lg-5">
                        <input asp-for="Title" />
                    </div>
                    <div class="control-validation col">
                        <span asp-validation-for="Title"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-3 col-lg-2">
                        <label asp-for="DistrictId"></label>
                    </div>
                    <div class="control-content col-md-9 col-lg-5">
                        <input asp-for="DistrictId" />
                    </div>
                    <div class="control-validation col">
                        <span asp-validation-for="DistrictId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-3 col-lg-2">
                        <label asp-for="Population"></label>
                    </div>
                    <div class="control-content col-md-9 col-lg-5">
                        <input asp-for="Population" />
                    </div>
                    <div class="control-validation col">
                        <span asp-validation-for="Population"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-3 col-lg-2">
                        <label asp-for="Remarks"></label>
                    </div>
                    <div class="control-content col-md-9 col-lg-5">
                        <input asp-for="Remarks" />
                    </div>
                    <div class="control-validation col">
                        <span asp-validation-for="Remarks"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-actions col-lg-7">
                        <button class="btn btn-primary">@Resource.ForAction("Submit")</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
